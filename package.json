{
    "name": "assistant",
    "displayName": "Assistant",
    "keywords": [
        "productivity",
        "visual studio code",
        "rules",
        "notes",
        "uberlinter",
        "regex"
    ],
    "icon": "images/assistant.png",
    "description": "Boost your development by providing custom tips displayed in the code",
    "version": "0.7.0",
    "publisher": "tomasz-smykowski",
    "repository": {
        "type": "git",
        "url": "https://github.com/tomaszs/Assistant.git"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Linters", "Other", "Programming Languages", "Debuggers"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "properties": {
                "assistant.rules": {
                    "type": "array",
                    "default": []
                }
            }
        }
    },
    "scripts": {
        "publish": "vsce publish minor",
        "build": "vsce package",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.26.0",
        "tslint": "5.10.0",
        "typescript": "3.8.3"
    }
}
